<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amit.webserviceinformation.View_Info"
    android:background="@color/green"
    >

    <EditText
        android:id="@+id/email"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Your Email Id"
        android:layout_marginTop="23dp"
        android:background="#ffffff"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <EditText
        android:id="@+id/mobile"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Your Mobile Number"
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:textColor="#000000"
        android:layout_below="@+id/email"
        android:layout_alignStart="@+id/email" />
    <Button
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="view information"
        android:onClick="view_Info"
        android:layout_below="@+id/mobile"
        android:layout_alignStart="@+id/mobile" />

    <Button
        android:id="@+id/viewjson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="get json view"
        android:onClick="view_json"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/textjson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Json Object View"
        android:textColor="@color/orange"
        android:layout_below="@+id/clear"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear"
        android:onClick="Cleartext"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/viewjson"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/jsonparse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="parse json view"
        android:layout_alignBaseline="@+id/view"
        android:layout_alignBottom="@+id/view"
        android:layout_alignEnd="@+id/mobile"
        android:onClick="parsejson"
        />

</RelativeLayout>
