<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amit.webserviceinformation.MainActivity"
    android:background="@color/green"
    >


    <Button
        android:id="@+id/addinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:text="Add Contact"
        android:textColor="#000000"
        android:onClick="add_info"
        />

    <Button
        android:id="@+id/viewinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/addinfo"
        android:layout_below="@+id/addinfo"
        android:layout_marginTop="50dp"
        android:text="View Contact"
        android:textColor="#000000"
        android:onClick="view_contact"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewinfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:text="No Internet Connection"
        android:textColor="#000000"
        android:textSize="30dp"
        android:visibility="visible"
        />
</RelativeLayout>
